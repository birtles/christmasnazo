{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "jsx": "react",
    "lib": ["dom", "es2017", "es2017.object"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./public/",
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
